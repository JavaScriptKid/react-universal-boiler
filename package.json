{
  "name": "boldr-universal-react",
  "version": "0.1.0",
  "description": "A bold universal React starter project.",
  "betterScripts": {
    "build:client": {
      "command": "./node_modules/.bin/webpack --env production --config webpack/webpack.config.client.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "production",
        "BABEL_ENV": "client",
        "SSR_PORT": 3000
      }
    },
    "build:server": {
      "command": "./node_modules/.bin/webpack --env production --config webpack/webpack.config.node.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "production",
        "BABEL_ENV": "server",
        "SSR_PORT": 3000
      }
    },
    "dev:client": {
      "command": "node ./webpack/dev.server.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "client",
        "SSR_PORT": 3000,
        "HMR_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    },
    "dev:server": {
      "command": "node ./bin/dev.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "server",
        "SSR_PORT": 3000,
        "HMR_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    }
  },
  "scripts": {
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "build:dlls": "webpack --verbose --colors --display-error-details --config ./webpack/dll.config.js",
    "clean": "rimraf static/assets && rimraf static/server.js && rimraf static/server.js.map && rimraf static/webpack-assets.json && rimraf static/webpack-stats.json",
    "clean:server": "rimraf static/server.js && rimraf static/server.js.map",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "better-npm-run dev:client",
    "dev:server": "better-npm-run dev:server",
    "postinstall": "npm run build:dlls"
  },
  "main": "index.js",
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr-universal-react.git"
  },
  "keywords": [
    "react",
    "webpack",
    "babel",
    "universal",
    "es6",
    "es7",
    "starter",
    "javascript",
    "redux"
  ],
  "bugs": {
    "url": "https://github.com/strues/boldr-universal-react/issues"
  },
  "engines": {
    "node": "~6.x",
    "npm": "~3.x"
  },
  "homepage": "https://github.com/strues/boldr-universal-react#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-config-boldr": "^1.1.1",
    "eslint-loader": "^1.5.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "happypack": "^2.2.1",
    "json-loader": "^0.5.4",
    "node-noop": "^1.0.0",
    "node-sass": "^3.9.3",
    "postcss-loader": "^0.13.0",
    "react-hot-loader": "^3.0.0-beta.3",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.22",
    "webpack-dev-middleware": "^1.7.0",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-node-externals": "^1.3.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "babel-register": "^6.14.0",
    "better-npm-run": "0.0.11",
    "compression": "^1.6.2",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "normalizr": "^2.2.1",
    "npm-run-all": "^3.1.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.0",
    "react-router-redux": "^4.0.5",
    "redial": "^0.4.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.0",
    "webpack-isomorphic-tools": "^2.5.8"
  }
}
